<!DOCTYPE html>
<html lang="en">
<head>
  <title>Generate Workout</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      text-align: center;
      background: #ECE7D8;
      color: #333;
      margin: 0;
      padding: 1rem;
      box-sizing: border-box;
      overflow-x: hidden;
    }
    .container {
      background: #F9F8F3;
      max-width: 650px;
      margin: 0 auto;
      padding: 1rem;
      border-radius: 10px;
      border: 1px solid #DDD;
      box-sizing: border-box;
    }
    /* Muscle Group Cards */
    .muscle-groups {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
      gap: 8px;
    }
    .muscle-card {
      flex: 1;
      height: 90px;
      background: #fff;
      border: 2px solid #AAA;
      border-radius: 8px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: 0.9rem;
      font-weight: 600;
      color: #333;
      cursor: pointer;
      transition: background 0.3s ease, border-color 0.3s ease;
      margin: 0;
    }
    .muscle-card:hover {
      background: #f0ebeb;
      border-color: #888;
    }
    .muscle-card.active {
      background: #ffc87f;
      border-color: #f9b752;
    }
    .emoji {
      font-size: 1.5rem;
      margin-bottom: 2px;
    }
    /* Gym Mode Toggle */
    .toggle-container {
      margin: 0 auto 1rem auto;
      display: inline-block;
      position: relative;
      width: 140px;
      height: 35px;
    }
    .toggle-container input {
      display: none;
    }
    .slider {
      position: absolute; top: 0; left: 0; right: 0; bottom: 0;
      background-color: #556B2F;
      transition: 0.4s;
      border-radius: 35px;
    }
    .slider:before {
      content: "";
      position: absolute;
      height: 27px;
      width: 27px;
      left: 4px;
      bottom: 4px;
      background-color: #fff;
      transition: 0.4s;
      border-radius: 50%;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    input:checked + .slider {
      background-color: #8C4528;
    }
    input:checked + .slider:before {
      transform: translateX(105px);
    }
    .slider-text {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 100%;
      text-align: center;
      color: #fff;
      font-size: 0.8rem;
      font-weight: 600;
      pointer-events: none;
    }
    .slider-text-left { left: 0; }
    .slider-text-right { right: 0; }
    input:checked ~ .slider .slider-text-left {
      display: none;
    }
    input:not(:checked) ~ .slider .slider-text-right {
      display: none;
    }
    /* Exercise List */
    .exercise-list {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin: 1rem 0;
      align-items: center;
    }
    .exercise-card {
      width: 95%;
      max-width: 500px;
      background: #FFE7D0;
      border: 1px solid #EEE;
      border-radius: 5px;
      padding: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-size: 0.95rem;
      font-weight: 600;
      box-sizing: border-box;
      min-height: 60px;
    }
    .exercise-card .info {
      text-align: left;
    }
    /* For Type1, display max and reps on separate lines */
    .exercise-card.type1 .info span {
      display: block;
      font-size: 0.85rem;
      margin-top: 4px;
    }
    .exercise-card:not(.type1) .info span {
      font-size: 0.85rem;
    }
    .exercise-card button {
      background: none;
      border: none;
      font-size: 1.25rem;
      cursor: pointer;
      transition: transform 0.2s ease;
    }
    .exercise-card button:hover {
      transform: scale(1.2);
    }
    /* Bottom Bar */
    .bottom-bar {
      margin-top: 1.5rem;
      position: relative;
    }
    .info-btn {
      font-size: 1.25rem;
      background: none;
      border: none;
      cursor: pointer;
      transition: transform 0.2s ease;
      position: absolute;
      left: 0;
      top: 0;
      margin-top: 8px;
    }
    .info-btn:hover {
      transform: scale(1.1);
    }
    .start-workout-btn {
      display: inline-block;
      width: 100%;
      background: #556B2F;
      color: #fff;
      padding: 0.75rem 1.25rem;
      font-size: 1rem;
      font-weight: 700;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .start-workout-btn:hover {
      background: #3F4E24;
    }
    /* Info Overlay: 4 buttons in a column */
    .info-overlay {
      display: none;
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.4);
      z-index: 9999;
      justify-content: center;
      align-items: center;
    }
    .info-overlay-content {
      background: #F9F8F3;
      border-radius: 8px;
      padding: 1rem;
      width: 80%;
      max-width: 300px;
      text-align: center;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .info-overlay-content button {
      display: block;
      width: 100%;
      padding: 0.625rem;
      background: #A0522D;
      color: #fff;
      border: 2px solid #8C4528;
      border-radius: 5px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .info-overlay-content button:hover {
      background: #8C4528;
    }
    @media (min-width: 601px) {
      body {
        padding: 2rem;
      }
      .muscle-card {
        height: 100px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- (1) Muscle Group Cards -->
    <div class="muscle-groups">
      <!-- Card 1: Chest, Arms & Abs -->
      <form action="/generate-workout" method="POST" class="muscle-card" id="card-chestAbsArms" onClick="this.submit()">
        <input type="hidden" name="muscleGroup" value="chestArmsAndAbs" />
        <input type="hidden" name="dumbbell_only" value="<%= dumbbellOnly ? '1' : '0' %>">
        <div class="emoji">üí™</div>
        <div>Chest, Arms & Abs</div>
      </form>
      <!-- Card 2: Back & Shoulders -->
      <form action="/generate-workout" method="POST" class="muscle-card" id="card-backShoulders" onClick="this.submit()">
        <input type="hidden" name="muscleGroup" value="shouldersAndBack" />
        <input type="hidden" name="dumbbell_only" value="<%= dumbbellOnly ? '1' : '0' %>">
        <div class="emoji">üèãÔ∏è</div>
        <div>Back & Shoulders</div>
      </form>
      <!-- Card 3: Legs -->
      <form action="/generate-workout" method="POST" class="muscle-card" id="card-legs" onClick="this.submit()">
        <input type="hidden" name="muscleGroup" value="legs" />
        <input type="hidden" name="dumbbell_only" value="<%= dumbbellOnly ? '1' : '0' %>">
        <div class="emoji">ü¶µ</div>
        <div>Legs</div>
      </form>
    </div>

    <!-- (2) Gym Mode Toggle -->
    <form action="/generate-workout" method="POST" style="margin-bottom:1rem;">
      <input type="hidden" name="muscleGroup" value="<%= muscleGroup %>">
      <label class="toggle-container">
        <input type="checkbox" name="dumbbell_only" value="1" <%= dumbbellOnly ? 'checked' : '' %> onchange="this.form.submit()">
        <span class="slider">
          <span class="slider-text slider-text-left">Full Gym</span>
          <span class="slider-text slider-text-right">DB Only</span>
        </span>
      </label>
    </form>

    <!-- (3) Exercise List -->
    <% if (workout && workout.length > 0) { %>
      <div class="exercise-list">
        <% workout.forEach((exercise, index) => { %>
          <div class="exercise-card <%= exercise.type === 'type1' ? 'type1' : '' %>">
            <div class="info">
              <strong><%= exercise.exercise_name || 'Not Available' %></strong><br>
              <% if (exercise.type === 'type1' && exercise.maxWeight !== undefined) { %>
                <span>Max Weight: <%= exercise.maxWeight %> lbs</span>
                <span>Reps Completed: <%= exercise.repsAtMax %></span>
              <% } else if (exercise.lastPerformance) { %>
                <span>Avg Weight: <%= exercise.lastPerformance.averageWeight %> lbs</span>
                <span>Avg Reps: <%= exercise.lastPerformance.averageReps %></span>
              <% } else { %>
                <span>No performance data</span>
              <% } %>
            </div>
            <!-- Refresh button -->
            <form action="/swap-exercise" method="POST">
              <input type="hidden" name="exerciseIndex" value="<%= index %>">
              <input type="hidden" name="sourcePage" value="generate">
              <button type="submit" title="Swap this exercise">üîÑ</button>
            </form>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p style="margin:1rem 0;">No workout generated yet.</p>
    <% } %>

    <!-- (4) Bottom Bar -->
    <div class="bottom-bar" style="margin-top:1.5rem; position:relative;">
      <button type="button" class="info-btn" onclick="toggleInfoOverlay()" aria-label="Info menu">‚ÑπÔ∏è</button>
      <form action="/start-workout" method="POST">
        <button type="submit" class="start-workout-btn">START WORKOUT</button>
      </form>
    </div>
  </div><!-- end .container -->

  <!-- Info Overlay: 4 evenly spaced buttons -->
  <div class="info-overlay" id="infoOverlay">
    <div class="info-overlay-content">
      <button type="button" onclick="toggleInfoOverlay()">‚úñ</button>
      <form action="/info" method="GET">
        <button type="submit">Info</button>
      </form>
      <form action="/analytics" method="GET">
        <button type="submit">Reporting</button>
      </form>
      <form action="/logout" method="POST">
        <button type="submit">Logout</button>
      </form>
    </div>
  </div>

  <script>
    // Highlight selected muscle group card
    const muscleGroup = "<%= muscleGroup %>";
    if (muscleGroup === 'chestArmsAndAbs') {
      document.getElementById('card-chestAbsArms')?.classList.add('active');
    } else if (muscleGroup === 'shouldersAndBack') {
      document.getElementById('card-backShoulders')?.classList.add('active');
    } else if (muscleGroup === 'legs') {
      document.getElementById('card-legs')?.classList.add('active');
    }
    // Info overlay toggler
    function toggleInfoOverlay() {
      const overlay = document.getElementById('infoOverlay');
      if (!overlay) return;
      overlay.style.display = overlay.style.display === 'flex' ? 'none' : 'flex';
      if (overlay.style.display === 'flex') {
        overlay.style.justifyContent = 'center';
        overlay.style.alignItems = 'center';
      }
    }
  </script>
</body>
</html>
