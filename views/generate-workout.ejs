<!DOCTYPE html>
<html lang="en">
<head>
  <title>Generate Workout</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      text-align: center;
      background: #F9F8F3;
      color: #333;
      /* Force main container to max 600px */
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem; 
      box-sizing: border-box;
      overflow-x: hidden; 
    }

    h1 {
      color: #556B2F;
      margin-bottom: 1.25rem;
      font-size: 1.5rem;
    }

    .button-form {
      margin: 1rem 0; 
      text-align: center;
    }
    .button-form button {
      display: block;
      width: 100%;
      max-width: 100%; 
      margin: 0.5rem auto; 
      padding: 0.75rem 1.25rem; 
      font-size: 1rem;
      font-weight: 700;
      background: #A0522D; 
      color: #fff;
      border: 2px solid #8C4528;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
      box-sizing: border-box;
    }
    .button-form button:hover {
      background: #8C4528;
      transform: translateY(-2px);
    }

    .start-workout-button {
      background: #556B2F !important;
      border-color: #3F4E24 !important;
    }
    .start-workout-button:hover {
      background: #3F4E24 !important;
      transform: translateY(-2px);
    }

    select {
      font-size: 1rem;
      padding: 0.625rem;
      border-radius: 5px;
      margin: 1rem 0;
      width: 100%;
      max-width: 100%; 
      box-sizing: border-box;
      border: 1px solid #CCC;
      transition: border-color 0.3s ease;
    }
    select:focus {
      border-color: #556B2F;
      outline: none;
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin: 1.25rem 0; 
    }

    .workout-item {
      margin-bottom: 1.25rem;
      font-size: 1rem;
      background: #FFF7F0;
      padding: 0.625rem; 
      border: 1px solid #EEE;
      border-radius: 5px;
      text-align: left;
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
      margin: 0.625rem auto;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      transition: transform 0.2s ease;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .workout-item:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .item-info {
      flex: 1;
      padding-right: 1rem;
    }

    .swap-form {
      margin-left: 1rem;
    }
    .swap-form button {
      background: none;
      border: none;
      font-size: 1.25rem; 
      cursor: pointer;
      transition: transform 0.2s ease;
    }
    .swap-form button:hover {
      transform: scale(1.2);
    }

    .toggle-container {
      display: flex;
      justify-content: center;
      margin: 1.5rem 0;
    }
    .switch {
      position: relative;
      display: inline-block;
      width: 160px;
      height: 40px;
    }
    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }
    .slider {
      position: absolute;
      cursor: pointer;
      top: 0; 
      left: 0; 
      right: 0; 
      bottom: 0;
      background-color: #556B2F;
      transition: 0.4s;
      border-radius: 40px;
      z-index: 1;
    }
    .slider:before {
      content: "";
      position: absolute;
      height: 32px;
      width: 32px;
      left: 4px;
      bottom: 4px;
      background-color: #fff;
      transition: 0.4s;
      border-radius: 50%;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      z-index: 2;
    }
    .slider:after {
      content: "Full Gym";
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: #ffffff;
      font-size: 0.9rem;
      pointer-events: none;
      z-index: 3; 
      text-align: center;
      white-space: nowrap;
    }
    input:checked + .slider {
      background-color: #8C4528;
    }
    input:checked + .slider:before {
      transform: translateX(120px);
    }
    input:checked + .slider:after {
      content: "DB Only";
    }
    input:focus + .slider {
      box-shadow: 0 0 1px #556B2F;
    }

    @media (max-width: 600px) {
      body {
        padding: 1rem;
      }
      .switch {
        width: 140px;
        height: 35px;
      }
      .slider:before {
        height: 27px;
        width: 27px;
      }
      .slider:after {
        font-size: 0.8rem;
      }
      input:checked + .slider:before {
        transform: translateX(105px);
      }
    }
  </style>
</head>
<body>
  <h1>Welcome, <%= user.email.split('@')[0] %>!</h1>

  <!-- Muscle Group Selection + Dumbbell Toggle -->
  <form action="/generate-workout" method="POST" class="button-form">
    <p style="font-weight: 600;">Area of Focus:</p>
    <select name="muscleGroup" required>
      <option value="legs" <%= muscleGroup === 'legs' ? 'selected' : '' %>>Legs</option>
      <option value="shouldersAndBack" <%= muscleGroup === 'shouldersAndBack' ? 'selected' : '' %>>Shoulders and Back</option>
      <option value="chestArmsAndAbs" <%= muscleGroup === 'chestArmsAndAbs' ? 'selected' : '' %>>Chest, Arms, and Abs</option>
    </select>

    <div class="toggle-container">
      <label class="switch">
        <input 
          type="checkbox" 
          id="dumbbell-only" 
          name="dumbbell_only" 
          value="1" 
          <%= dumbbellOnly ? 'checked' : '' %>
        >
        <span class="slider"></span>
      </label>
    </div>

    <button type="submit">Generate Workout</button>
  </form>

  <% if (workout && workout.length > 0) { %>
    <ul>
      <% workout.forEach((exercise, index) => { %>
        <li class="workout-item">
          <div class="item-info">
            <strong>Exercise <%= index + 1 %>: <%= exercise.exercise_name || 'Exercise Not Available' %></strong><br>
            <% if (exercise.lastPerformance) { %>
              Avg Weight: <%= exercise.lastPerformance.averageWeight %> lbs, 
              Avg Reps: <%= exercise.lastPerformance.averageReps %>
            <% } else { %>
              No performance data available
            <% } %>
          </div>
          <!-- ðŸ”„ Swap button form -->
          <form action="/swap-exercise" method="POST" class="swap-form">
            <input type="hidden" name="exerciseIndex" value="<%= index %>">
            <input type="hidden" name="sourcePage" value="generate">
            <button type="submit" title="Swap this exercise">ðŸ”„</button>
          </form>
        </li>
      <% }); %>
    </ul>

    <!-- "Start Workout" Button -->
    <form action="/start-workout" method="POST" class="button-form" id="start-workout-form">
      <input type="hidden" name="workout" value='<%- JSON.stringify(workout) %>'>
      <button type="button" class="start-workout-button" onclick="startWorkout()">Start Workout</button>
    </form>
  <% } %>

  <!-- "Reporting" button -->
  <form action="/analytics" method="GET" class="button-form">
    <button type="submit">Reporting</button>
  </form>

  <!-- Info & Logout Buttons -->
  <form action="/info" method="GET" class="button-form">
    <button type="submit">Info</button>
  </form>

  <form action="/logout" method="POST" class="button-form">
    <button type="submit">Logout</button>
  </form>

  <!-- Hidden Silent Audio for Unlocking Audio Context -->
  <audio id="silent-audio" src="/audio/silent.mp3" preload="auto"></audio>

  <script>
    // Function to handle Start Workout button click
    function startWorkout() {
      const silentAudio = document.getElementById('silent-audio');
      silentAudio.play().then(() => {
        document.getElementById('start-workout-form').submit();
      }).catch((error) => {
        console.error('Audio unlock failed:', error);
        alert('Unable to start workout due to audio restrictions. Please try again.');
      });
    }
  </script>
</body>
</html>