<!DOCTYPE html>
<html lang="en">
<head>
  <title>Workout Preview</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Added viewport meta tag -->
  <!-- Google Font and styling -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <style>
    /*
      Workout preview page:
      Lists out the exercises chosen for the workout and allows
      user to regenerate or start the workout.
    */

    body {
      font-family: 'Open Sans', sans-serif;
      text-align: center;
      background: #F9F8F3;
      color: #333;
      max-width: 100%; /* Changed from 600px to 100% */
      margin: 0 auto;
      padding: 2rem; /* Changed from 20px to rem units */
      box-sizing: border-box;
      overflow-x: hidden;
    }

    h1 {
      color: #556B2F;
      margin-bottom: 1.25rem; /* Changed from 20px to rem */
      font-size: 1.5rem; /* Changed from default */
    }

    ul {
      list-style-type: none;
      padding: 0;
      margin: 1.25rem 0; /* Changed from default to rem */
    }

    li {
      margin: 0.625rem 0; /* Changed from 10px to rem units */
      background: #FFF7F0;
      padding: 0.625rem; /* Changed from 10px to rem units */
      border: 1px solid #EEE;
      border-radius: 5px;
      width: 100%;
      max-width: 100%; /* Changed from 300px to 100% */
      box-sizing: border-box;
      text-align: left;
    }

    strong {
      display: block;
      margin-bottom: 0.3125rem; /* Changed from 5px to rem */
      font-size: 1.125rem; /* Changed from default */
    }

    p {
      margin: 0.3125rem 0; /* Changed from 5px to rem */
      font-size: 1rem; /* Changed from default */
    }

    button {
      padding: 0.625rem 1.25rem; /* Changed from 10px 20px to rem units */
      font-size: 1rem; /* Changed from 16px to 1rem */
      background: #A0522D;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin: 1.25rem 0.3125rem; /* Changed from 10px 5px to rem units */
      transition: background 0.3s ease;
      box-sizing: border-box;
    }

    button:hover {
      background: #8C4528;
    }

    /* If user data is present, show performance details */
    
    @media (min-width: 601px) {
      /* Adjust styles for larger screens if needed */
      body {
        padding: 2rem;
      }
    }

    @media (max-width: 600px) {
      body {
        padding: 1rem;
      }
      li {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <!-- Workout preview page:
       Lists out the exercises chosen for the workout and allows
       user to regenerate or start the workout.
  -->

  <h1>Your Workout</h1>

  <ul>
    <% workout.forEach((exercise, index) => { %>
      <li>
        <strong><%= exercise.exercise_name || 'Exercise Name Not Available' %></strong>
        <% if (exercise.lastPerformance) { %>
          <p>Last Performance: Avg Weight: <%= exercise.lastPerformance.averageWeight %> lbs,
          Avg Reps: <%= exercise.lastPerformance.averageReps %></p>
        <% } else { %>
          <p>No previous performance data</p>
        <% } %>
      </li>
    <% }); %>
  </ul>

  <!-- Button to regenerate workout (if needed) -->
  <form action="/regenerate-workout" method="POST" class="button-form">
    <button type="submit">Regenerate Workout</button>
  </form>

  <!-- Button to start the workout -->
  <form action="/start-workout" method="POST" class="button-form">
    <button type="submit">Start Workout</button>
  </form>
</body>
</html>